<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- SearchView for searching dictionary words -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/dictionarySearchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:queryHint="@string/search_categories"
        android:iconifiedByDefault="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView to display the list of words -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dictionaryRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/dictionarySearchView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnFeelings"
        app:layout_constraintHeight_percent="0.5" />

    <!-- Buttons for category filters -->
    <Button
        android:id="@+id/btnFeelings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:text="@string/feelings_button_text"
        app:layout_constraintTop_toBottomOf="@id/dictionaryRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnObjects"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btnObjects"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:text="@string/objects_button_text"
        app:layout_constraintTop_toBottomOf="@id/dictionaryRecyclerView"
        app:layout_constraintStart_toEndOf="@id/btnFeelings"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Continue buttons for categories People, Places, Verbs -->

    <Button
        android:id="@+id/btnPeople"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:text="@string/people_button_text"
        app:layout_constraintTop_toBottomOf="@id/btnFeelings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnPlaces"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btnPlaces"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:text="@string/places_button_text"
        app:layout_constraintTop_toBottomOf="@id/btnObjects"
        app:layout_constraintStart_toEndOf="@id/btnPeople"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/btnVerbs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:text="@string/verbs_button_text"
        app:layout_constraintTop_toBottomOf="@id/btnPeople"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Add word button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addWordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_word"
        android:minHeight="48dp"
        android:minWidth="48dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintTop_toBottomOf="@id/btnVerbs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Back button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_button_text"
        android:minHeight="48dp"
        android:minWidth="48dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintTop_toBottomOf="@id/addWordButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
