<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Text for entering a word -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_word"
            android:padding="8dp"
            android:layout_gravity="center_horizontal" />

        <!-- EditText for the new word -->
        <EditText
            android:id="@+id/newWordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/word_hint"
            android:inputType="text"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal" />

        <!-- Text for selecting a category -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_category"
            android:padding="8dp"
            android:layout_gravity="center_horizontal" />

        <!-- Spinner for selecting a category -->
        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="16dp"
            android:layout_gravity="center_horizontal" />

        <!-- Checkbox for marking as survival word -->
        <CheckBox
            android:id="@+id/survivalCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mark_as_survival_word"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
